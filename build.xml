<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="SpaceInvaders">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="SpaceInvaders.classpath">
        <pathelement location="bin"/>
    	<pathelement location="libs/groovy/groovy-all-2.0.0.jar"/>
        <pathelement location="libs/swt/swt-osx-64-3.7.1.jar"/>
    </path>
    <taskdef name="groovyc"
         classname="org.codehaus.groovy.ant.Groovyc"
         classpathref="SpaceInvaders.classpath"/>

    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.java"/>
                <exclude name="**/*.groovy"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="init" name="build">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <groovyc srcdir="src" destdir="bin">
            <classpath refid="SpaceInvaders.classpath"/>
            <javac debug="true" debuglevel="${debuglevel}" source="${source}" target="${target}"/>
        </groovyc>
    </target>
    <target depends="build" name="package">
        <mkdir dir="dist"/>
        <java classname="com.hornmicro.bootstrap.Package" failonerror="true" fork="yes">
            <classpath refid="SpaceInvaders.classpath"/>
        </java>
    </target>
    <target depends="build" name="run">
        <java classname="com.hornmicro.spaceinvaders.SpaceInvaders" failonerror="true" fork="yes">
            <jvmarg line="-XstartOnFirstThread"/>
            <classpath refid="SpaceInvaders.classpath"/>
        </java>
    </target>
</project>
